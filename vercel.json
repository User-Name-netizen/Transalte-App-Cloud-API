{
  "version": 2,
  "name": "google-translate-app",
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    },
    {
      "src": "/",
      "dest": "src/server.js"
    }
  ],
  "env": {
    "GOOGLE_CLOUD_API_KEY": "@google_cloud_api_key"
  },
  "functions": {
    "src/server.js": {
      "maxDuration": 30
    }
  }
}
